<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <!--  ListRow Left sied Thumbnail image -->
        <LinearLayout android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip">

            <ImageView
                android:id="@+id/UserImage"
                android:layout_width="50dip"
                android:layout_height="50dip"/>

        </LinearLayout>

        <!-- Title Of Song-->
        <TextView
            android:id="@+id/NameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Rihanna "
            android:textColor="#040404"
            android:typeface="sans"
            android:textSize="15dip"
            android:textStyle="bold"/>
    <TextView
        android:id="@+id/LastNAmeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/NameUser"
        android:text="LastName"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

        <!-- Artist Name -->
        <TextView
            android:id="@+id/CollegeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NameUser"
            android:textColor="#343434"
            android:textSize="10dip"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Just gona stand there and ..." />

       <ImageView
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:layout_marginLeft="20dp"
           android:id="@+id/PositiveBtn"
           android:src="@mipmap/ic_plus_blue"
           android:layout_toRightOf="@+id/CollegeName"
           />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/NegativeBtn"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/PositiveBtn"
        android:src="@mipmap/ic_minus_red"
        />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/FrndsAlready"
        android:src="@drawable/frnd"
        android:layout_toRightOf="@+id/NegativeBtn"
        android:layout_marginLeft="20dp"/>


    </RelativeLayout>