<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up_page2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.munnasharma.socialmedia.SignUpPage2">

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Hiii !"
         android:textColor="#05f"
         android:textSize="20dp"
         android:fontFamily="serif"
         android:id="@+id/HIText"
         android:layout_marginTop="80dp"
         android:layout_marginLeft="120dp"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/HIText"
       android:text="Username"
       android:id="@+id/UsernameText"
       android:textSize="20dp"
       android:textColor="#05f"
       android:fontFamily="serif"
       android:layout_marginTop="80dp"
       android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set your password"
        android:textSize="20dp"
        android:id="@+id/SetPassText"
        android:textColor="#05f"
        android:fontFamily="serif"
        android:layout_below="@+id/UsernameText"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/pass1"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_custom"
        android:gravity="clip_horizontal"
        android:layout_below="@+id/SetPassText"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/pass2"
        android:inputType="textPassword"
        android:hint="Re Enter Password"
        android:background="@drawable/edit_text_custom"
        android:gravity="clip_horizontal"
        android:layout_below="@+id/pass1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass2"
        android:text="Please Select a security question"
        android:textSize="18dp"
        android:id="@+id/SecurityQuestionText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"/>
    <Spinner
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/SecurityQuestion"
        android:layout_below="@+id/SecurityQuestionText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/SecurityAnswer"
        android:hint="Security Answer"
        android:inputType="text"
        android:background="@drawable/edit_text_custom"
        android:gravity="clip_horizontal"
        android:layout_below="@+id/SecurityQuestion"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/SecurityAnswer"
        android:layout_marginTop="30dp"
        android:text="Sign Up"
        android:id="@+id/SignUpButton"
        android:textColor="#fff"
        android:background="@drawable/btncustom"/>
</RelativeLayout>
