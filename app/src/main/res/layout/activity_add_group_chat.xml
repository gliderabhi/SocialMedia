<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.munnasharma.ChatActivities.AddGroupChat">

    <TextView
        android:id="@+id/TextSetImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Set group chat icon "
        android:textSize="19dp"/>
    <ImageView
        android:id="@+id/GroupChatIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/TextSetImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/student"
        />
    <TextView
        android:id="@+id/ChatNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GroupChatIcon"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="Chat Name:"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/ChatNameField"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/GroupChatIcon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/ChatNameText"
        android:background="@drawable/edit_text_custom"
        android:hint="Chat Name"
        android:inputType="text"
        />
    <Button
        android:id="@+id/CreateGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChatNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/btncustom"
        android:padding="10dp"
        android:text="Create Group"
        android:textColor="#fff" />
</RelativeLayout>
